<% @goals.where("created_at >= ?", Time.zone.now.beginning_of_day).each do |g| %>
  <p>
    <% if g.completion? %>
      <%= g.size %><%= "   " %><%= g.content %>
    <% else %>
      <%= g.size %><%= "   " %><%= g.content %>
    <% end %>
  </p>
  <p>
    <%= form_for g, url: goal_path(g.id) do |f| %>
      <%= f.hidden_field (:id) %>
      <%= f.hidden_field (:completion) %>
      <%= f.submit %>
    <% end %>
  </p>
<% end %>
