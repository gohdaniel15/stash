<!-- Stats -->

<div class="stats-container feature-card">
	<div class="stats-header feature-card-header">
		<span class="stats-text feature-card-header-text"> Stats </span>
	</div>
	<div class="feature-card-content">
  	<div class="goals-count">
      <%= render 'goals/goals_count' %> 
    </div>

    <div class="articles-count">
      <%= render 'articles/articles_count' %>
    </div>

    <div class="upvotes-count">
      <%= render 'upvotes/upvotes_count' %>
    </div>
  </div>
</div>
