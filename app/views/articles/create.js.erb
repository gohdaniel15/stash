// if save
<%if @article.save %>
	$('#new-article-form').remove();
	$('#new_article').show();
	$('.article-feed').prepend("<%= j render 'articles/articles', article: @article %>");
<%else%>
// if error
	$('.flashes').html("<%= j render 'layouts/flashes' %>");
<%end%>

// update articles count
$('#a-count-number').text("<%= @user_articles %>")