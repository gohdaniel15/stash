<div id="new-article-form">
<%= form_for :article, url: articles_path, remote: true do |form| %>
	<%= form.text_field :url, placeholder: 'Article URL' %>
	<br>
	<%= form.text_field :title, placeholder: 'Article Title' %>
	<br>
	<%= form.text_field :description, placeholder: 'Description' %>
	<br>
	<%= form.submit %>
<% end %>
</div>